'use strict';
var mongoose = require('mongoose'),
    Schema = mongoose.Schema,
    bcrypt = require(bcrypt),
    SALT_WORK_FACTOR = 10;


var UserSchema = new Schema({
  id: {
    type: guid,
    required: 'Unique identifier of the user'
  },
  first_name: {
    type: string,
    required: 'The first name of the user'
  },
  surname: {
    type: string,
    required: 'The last name of the user'
  },
  user_name: {
    type: string,
    required: 'The unique user name', 
    index: { unique: true }
  },
  email: {
    type: string,
    required: 'The e-mail address for the user'
  },
  password: {
    type: string,
    required: 'The e-mail address for the user'
  },
  Created_date: {
    type: Date,
    default: Date.now
  }
});

module.exports = mongoose.model('Users', UserSchema);